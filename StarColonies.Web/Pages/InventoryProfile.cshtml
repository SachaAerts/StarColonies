@page "{id:guid}"
@model StarColonies.Web.Pages.InventoryProfile

@{
    ViewData["Title"] = "Inventory";
    Layout = "Shared/_Layout";
}

<section class="mainInventoryProfile">
    <button class="buttonProfile backButtonProfile">
        <a asp-page="Profile" asp-route-id="@Model.Id">
            <img class="modifyLogoProfile" src="~/img/icons/arrow.png" alt="back"/>
        </a>
    </button>
    
    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
    {
        <button class="buttonProfile backButtonInventoryProfile">
            <a asp-page="ItemsList">
                <img class="modifyLogoProfile" src="~/img/icons/modify.png" alt="modify"/>
            </a>
        </button>    
    }

    <h1 class="titleInventoryProfile">Inventory</h1>

    <hr class="ledHr"/>

    @for (int i = 0; i < Model.Items.Count; i += 2)
    {
        <div class="oneLineInventoryProfile">
            @for (int j = i; j < i + 2 && j < Model.Items.Count; j++)
            {
                var item = Model.Items[j];
                var inventoryItem = Model.Inventory.FirstOrDefault(inv => inv.Item?.Id == item.Id);
                var quantity = inventoryItem?.Quantity ?? 0;
                var cssClass = item.IsLegendary ? "oneItemInventoryProfile item-legendary" : "oneItemInventoryProfile item-common";
                <div class="@cssClass">
                    <img src="~/img/items/@item.ImagePath" alt="@item.Name"/>
                    <p>x @quantity</p>
                </div>
            }
        </div>
    }
</section>

<script>window.BASE_PATH = '@ViewContext.HttpContext.Request.PathBase';</script>
